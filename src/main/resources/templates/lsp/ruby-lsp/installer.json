{
  "id": "ruby-lsp",
  "name": "Ruby LSP",
  "executeOnStartServer": false,
  "check": {
    "exec": {
      "name": "Trying current command",
      "command": "${server.command}",
      "timeout": 2000
    }
  },
  "run": {
    "exec": {
      "name": "Install Ruby LSP",
      "command": {
        "windows": "cmd /C gem install ruby-lsp",
        "default": "sh -c gem install ruby-lsp"
      }
    }
  }
}
