{
  "id": "ruby-lsp",
  "name": "Ruby LSP",
  "programArgs": {
    "windows": "cmd /C ruby-lsp",
    "default": "sh -s ruby-lsp"
  },
  "expandConfiguration": true,
  "fileTypeMappings": [
    {
      "fileType": {
        "patterns": [
          "*.rb",
          "*.rbx",
          "*.rjs",
          "*.gemspec",
          "*.rake",
          "*.ru",
          "*.erb",
          "*.podspec",
          "*.rbi",
          "rakefile",
          "gemfile",
          "guardfile",
          "podfile",
          "capfile",
          "cheffile",
          "hobofile",
          "vagrantfile",
          "appraisals",
          "rantfile",
          "berksfile",
          "berksfile.lock",
          "thorfile",
          "puppetfile",
          "dangerfile",
          "brewfile",
          "fastfile",
          "appfile",
          "deliverfile",
          "matchfile",
          "scanfile",
          "snapfile",
          "gymfile"
        ]
      },
      "languageId": "ruby"
    }
  ]
}