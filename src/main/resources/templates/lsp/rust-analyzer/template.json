{
  "id": "rust-analyzer",
  "name": "Rust Language Server",
  "programArgs": {
    "default": "sh -c ${BASE_DIR}/rust-analyzer",
    "windows": "${BASE_DIR}/rust-analyzer.exe"
  },
  "expandConfiguration": true,
  "fileTypeMappings": [
    {
      "fileType": {
        "name": "Rust",
        "patterns": [
          "*.rs"
        ]
      },
      "languageId": "rust"
    },
    {
      "fileType": {
        "name": "ra_syntax_tree",
        "patterns": [
          "*.rast"
        ]
      },
      "languageId": "ra_syntax_tree"
    }
  ]
}
